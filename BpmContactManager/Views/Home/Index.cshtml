@model IEnumerable<BpmContactManager.Models.ViewModels.ContactViewModel>

@{
    ViewBag.Title = "Contacts";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="main-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobilePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>

        </th>
    </tr>
</table>

<div class="row top-buffer loading-row" hidden>
    <div class="text-center col-md-offset-2 col-md-8 loading-block">
        <h3>Loading...</h3>
    </div>
</div>

<div class="row top-buffer">
    <div class="text-center">
        <input type="button" id="getContacts" class="btn btn-delete" value="Load Contacts" /> @*If browser doesn't support scroll check.*@
    </div>
</div>

<script src="~/Scripts/rowUpload.js"></script>
<script>
    $(function () {
        getContacts(30);
        $("#getContacts").click(function () {
            getContacts();
        });

        $(window).scroll(function () {
            if ($(window).scrollTop() + $(window).height() == $(document).height()) {
                getContacts();
            }
        });
    });
</script>
